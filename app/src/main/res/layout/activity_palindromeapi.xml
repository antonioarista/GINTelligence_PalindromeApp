<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/customColorBackground"
    tools:context=".PalindromeAPIActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/mainActivity_EditText"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColorHint="@color/customColorTextHint"
            android:backgroundTint="@color/customColorText"
            android:imeOptions="actionDone"
            android:textColor="@color/customColorText"
            android:hint="Escribe aquí tu número"/>
        <Button
            android:id="@+id/mainActivity_Button"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_send"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/mainActivity_ScrollResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/mainActivity_result_sum"
                android:textSize="20dp"
                android:textColor="@color/customColorText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tu resultado aparecerá aqui..." />
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/mainActivity_result_decimal"
                        android:textColor="@color/customColorText"
                        android:layout_width="0dp"
                        android:layout_weight="25"
                        android:layout_height="match_parent"
                        />
                    <TextView
                        android:id="@+id/mainActivity_result_binary"
                        android:textColor="@color/customColorText"
                        android:layout_width="0dp"
                        android:layout_weight="75"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/mainActivity_loadingScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@drawable/loadinggif"
            android:gravity="center"
            />
    </FrameLayout>

</LinearLayout>