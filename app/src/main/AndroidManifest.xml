<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antonioarista.palindromeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ginlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ContactMeActivity"
            android:label="@string/contactMe"></activity>
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/palindromeMainMenuName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PalindromeAPIActivity"
            android:label="@string/palindromeApiActivityName" />
    </application>

</manifest>